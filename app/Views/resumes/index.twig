{% extends "layout.twig" %}

{% block title %}Resumes{% endblock %}
{% block content %}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <a class="btn pull-right" href="{{ path('resumes_logout') }}">Logout</a>
    {% endif %}
    <p>Click to view.</p>
    <div class="list-group">
        {% for item in itemList %}
            <a class="list-group-item" href="{{ path('resumes.download', {bucket: item.bucket, key: item.key}) }}">
                <strong>{{ item.name}}</strong> -- <em>{{ item.originalFilename }}</em>
            </a>
        {% endfor %}
    </div>
{% endblock %}

