{% extends "layout.twig" %}

{% block title %}Login{% endblock %}
{% block content %}
    <form role="form" action="{{ path('resumes_login_check') }}" method="post">
        <div class="form-group has-error">{{ error }}</div>
        <div class="form-group">
            <label for="username">Username</label>
            <input
                id="username"
                class="form-control"
                type="text"
                name="_username"
                value="{{ last_username }}"
                placeholder="Username">
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input
                id="password"
                class="form-control"
                type="password"
                name="_password"
                value=""
                placeholder="Password">
        </div>
        <button type="submit" class="btn btn-default">Login</button>
    </form>
{% endblock %}
